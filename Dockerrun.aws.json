{
    "AWSEBDockerrunVersion": "2",
    "containerDefinitions":[
        {
            "name": "client",
            "image": "shavera/multi-client",
            "hostname": "client",
            "essential": "false"
        },
        {
            "name": "server",
            "image": "shavera/multi-server",
            "hostname": "api",
            "essential": "false"
        },
        {
            "name": "worker",
            "image": "shavera/multi-worker",
            "hostname": "worker",
            "essential": "false"
        },
        {
            "name": "nginx",
            "image": "shavera/multi-nginx",
            "essential": "true",
            "portMappings":[
                {
                    "hostPort": "80",
                    "containerPort": "80"
                }
            ],
            "links": ["client", "server"]
        }
    ]
}